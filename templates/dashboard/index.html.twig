{% extends 'layout/user_base.html.twig' %}

{% block title %}Tableau de bord - LSDA{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('build/dashboard.css') }}">
{% endblock %}

{% block body %}

    <div class="container-fluid mt-2 pt-4">
        <div class="row g-4">
            <!-- Statistiques -->
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Vue d'ensemble des enquêtes</h5>
                        <h6 class="card-subtitle text-muted">Statistiques actuelles des enquêtes</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="border rounded p-3 d-flex align-items-center">
                                    <i class="fas fa-folder-open fa-2x text-lsda-red me-3"></i>
                                    <div>
                                        <div class="small">Enquêtes ouvertes</div>
                                        <div class="fs-4 fw-bold">24</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="border rounded p-3 d-flex align-items-center">
                                    <i class="fas fa-file-alt fa-2x text-success me-3"></i>
                                    <div>
                                        <div class="small">Enquêtes résolues</div>
                                        <div class="fs-4 fw-bold">156</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="border rounded p-3 d-flex align-items-center">
                                    <i class="fas fa-chart-bar fa-2x text-primary me-3"></i>
                                    <div>
                                        <div class="small">Taux de résolution</div>
                                        <div class="fs-4 fw-bold">86.7%</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mes enquêtes en cours -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Mes enquêtes en cours</h5>
                            <h6 class="card-subtitle text-muted">Liste de vos enquêtes actives</h6>
                        </div>
                        <a href="#" class="btn btn-outline-secondary btn-sm">Voir tout</a>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            {% for i in 1..3 %}
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">Enquête #{{ 2024 - i }}</h6>
                                        <small class="text-muted">Mise à jour il y a 2 heures</small>
                                    </div>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Voir détails</a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Actions rapides</h5>
                        <h6 class="card-subtitle text-muted">Accès direct aux fonctionnalités principales</h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <a href="" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-search text-lsda-red me-3"></i>
                                <div>
                                    <div class="fw-bold">Toutes les enquêtes</div>
                                    <small class="text-muted">Consulter les enquêtes du bureau</small>
                                </div>
                            </a>
                            <a href="" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-box text-lsda-red me-3"></i>
                                <div>
                                    <div class="fw-bold">Saisies</div>
                                    <small class="text-muted">Gestion des biens saisis</small>
                                </div>
                            </a>
                            <a href="" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="fas fa-building text-lsda-red me-3"></i>
                                <div>
                                    <div class="fw-bold">Saisine du bureau</div>
                                    <small class="text-muted">Nouvelles affaires</small>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informations -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Informations</h5>
                        <h6 class="card-subtitle text-muted">Actualités et notes de service</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            {% for i in 1..2 %}
                                <li class="list-group-item d-flex">
                                    <i class="fas fa-info-circle text-primary me-3 mt-1"></i>
                                    <div>
                                        <h6 class="mb-1">Note de service #{{ i }}</h6>
                                        <small class="text-muted">Mise à jour des procédures internes...</small>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Saisies -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Dernières saisies</h5>
                        <h6 class="card-subtitle text-muted">Aperçu des biens saisis récemment</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <div class="small">Armes</div>
                                    <div class="fs-4 fw-bold">12</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <div class="small">Drogues</div>
                                    <div class="fs-4 fw-bold">8kg</div>
                                </div>
                            </div>
                        </div>
                        <a href="#" class="btn btn-outline-secondary w-100">Voir l'inventaire complet</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}