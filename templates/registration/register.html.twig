{% extends 'layout/base.html.twig' %}

{% block title %}LSDA Intranet - Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/login.css') }}">
{% endblock %}

{% block body %}
    <div class="container login-container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-8 col-lg-6">
                <div class="login-box p-4 p-md-4">
                    <div class="text-center mb-4">
                        <img src="{{ asset('build/logo/logo.png') }}" alt="LSDA Logo" class="login-logo img-fluid">
                    </div>

                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <form method="post">
                        <h1 class="form-title h3 mb-4 font-weight-normal text-center">Créer un compte</h1>

                        {{ form_start(registrationForm) }}

                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_row(registrationForm.lastname, {
                                    label: 'Nom',
                                    attr: { class: 'form-control' }
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.firstname, {
                                    label: 'Prénom',
                                    attr: { class: 'form-control' }
                                }) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(registrationForm.email, {
                                label: 'Adresse email',
                                attr: { class: 'form-control' }
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe',
                                attr: { class: 'form-control' }
                            }) }}
                        </div>

                        <div class="mb-3 form-check">
                            {{ form_row(registrationForm.agreeTerms, {
                                label: 'J\'accepte les termes et conditions',
                                attr: { class: 'form-check-input' }
                            }) }}
                        </div>

                        <button class="btn btn-login w-100" type="submit">Créer un compte</button>

                        {{ form_end(registrationForm) }}

                    </form>

                    <div class="mt-4 p-3 disclaimer">
                        <p class="mb-0">
                            <strong>Avertissement :</strong>
                            La création d'un compte est soumise à vérification manuelle par un administrateur. <br>
                            Réservé à l'usage exclusif des membres du LSDA.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
