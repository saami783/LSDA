{% extends 'layout/base.html.twig' %}

{% block title %}LSDA Intranet - Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/login.css') }}">
{% endblock %}

{% block body %}
    <div class="container login-container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-8 col-lg-6">
                <div class="login-box p-4 p-md-4">
                    <div class="text-center mb-4">
                        <img src="{{ asset('build/logo/logo.png') }}" alt="LSDA Logo" class="login-logo img-fluid">
                    </div>

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert alert-info">
                            You are logged in as {{ app.user.userIdentifier }},
                            <a href="{{ path('app_logout') }}" class="text-danger">Logout</a>
                        </div>
                    {% endif %}

                    <form method="post">
                        <h1 class="form-title h3 mb-4 font-weight-normal text-center">Los Santos District Attorney's Office</h1>

                        <div class="mb-3">
                            <label for="username" class="form-label">Adresse email</label>
                            <input type="email"
                                   value="{{ last_username }}"
                                   name="_username"
                                   id="username"
                                   class="form-control"
                                   autocomplete="email"
                                   required
                                   autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password"
                                   name="_password"
                                   id="password"
                                   class="form-control"
                                   autocomplete="current-password"
                                   required>
                        </div>

                        <input type="hidden"
                               name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">

                        <div class="mb-3 form-check">
                            <input type="checkbox"
                                   name="_remember_me"
                                   id="_remember_me"
                                   class="form-check-input">
                            <label for="_remember_me" class="form-check-label">Se souvenir de moi</label>
                        </div>

                        <button class="btn btn-login w-100" type="submit">
                            Se connecter à l'intranet
                        </button>
                    </form>

                    <div class="mt-4 p-3 disclaimer">
                        <p class="mb-0">
                            <strong>Avertissement :</strong> Réservé à l'usage exclusif des membres du LSDA.
                            Tout transfert non autorisé des informations contenues dans ce système entraînera un licenciement déshonorable et une arrestation.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}